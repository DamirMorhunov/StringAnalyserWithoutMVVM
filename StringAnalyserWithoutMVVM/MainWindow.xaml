<Window x:Class="StringAnalyserWithoutMVVM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StringAnalyserWithoutMVVM"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="425">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.07*"/>
            <RowDefinition/>
            <RowDefinition Height="0.1*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="text" TextWrapping="Wrap" Grid.Row="1"  AcceptsReturn="True" TextChanged="text_TextChanged"/>
        <TextBlock x:Name="statistic" Grid.Row="2"/>
        <StackPanel Orientation="Horizontal">
            <Button x:Name="add" Content="ADD" Width="50" Click="add_Click"/>
        </StackPanel>
    </Grid>
</Window>
